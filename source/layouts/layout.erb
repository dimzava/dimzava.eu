  </head>

  <body>
    <div class="container">
      <div class="header">
        <nav>
          <ul class="nav nav-pills pull-right">
            <%= nav_link_to 'Home', '/' %>
            <%= nav_link_to 'Projects', '/projects/' %>
            <%= nav_link_to 'Contact', '/contact/' %>
          </ul>
        </nav>
        <h3 class="text-muted">Dimitris Zavaliadis</h3>
      </div>

      <%= yield %>

      <footer class="footer">
        <p>Last update: <%= File.mtime(current_page.source_file).strftime("%e %h %G") %></p>
      </footer>
    </div> <!-- /container -->

